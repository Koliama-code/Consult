{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react-jsx",  // <-- Ajout crucial pour le support JSX
    "jsxImportSource": "react",  // <-- Optionnel mais recommandé
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["react", "react-dom"]  // <-- Ajout recommandé
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}